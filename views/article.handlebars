<h1>{{article.title}}</h1>
<h6>{{article.user.username}} * {{format_date article.createdAt}}</h6>
<hr />
<p>{{{article.content}}}</p>
<div class="mui-divider"></div>
<div class="flex-row justify-space-between">
  <button class="mui-btn">👏 {{article.cheers}}</button>
  <button class="mui-btn">💬 {{article.comments.length}}</button>
</div>
<form class="mui-form--inline row align-end">
  <div class="mui-textfield col-auto">
    <textarea type="text" id="content" placeholder="Comment"></textarea>
  </div>
  <button class="mui-btn mui-btn--raised col-1">Post</button>
</form>
<div class="mui-divider"></div>
{{#each article.comments as |comment|}}
    {{>comment}}
{{/each}}