<h2>{{username}}'s articles</h2>
<form action="/create">
  <button class="mui-btn mui-btn--raised mui-btn--primary" type="submit">New
    article</button>
</form>
{{#each articles as |article|}}
  <div class="flex-column justify-space-between">
    <h3>{{article.title}}</h3>
    <div>Created: {{format_date article.createdAt}}</div>
    <div>Updated: {{format_date article.updatedAt}}</div>
    <form action="/edit/{{article.id}}">
      <button class="mui-btn mui-btn--raised" type="submit">Edit</button>
    </form>

  </div>
  <div class="mui-divider"></div>
{{/each}}